{% extends ('forms/login-base.html.twig') %}
{% form_theme requestForm 'forms/login-layout.html.twig' %}

{% block header_logo %}
    <a class="logo" title="" href="">
        Reset your password
    </a>
{% endblock header_logo %}

{% block form_content %}
    {{ form_start(requestForm) }}
    {{ form_row(requestForm.email,  {'attr': {'placeholder': 'email', 'icon': 'fa fa-fw fa-user'}}) }}
    <div>
        <small>
            Enter your email address and we we will send you a
            link to reset your password.
        </small>
    </div>
    <hr>
    <button class="btn btn-primary">Send password reset email</button>
    {{ form_end(requestForm) }}
    <a href="{{ path('easyadmin') }}">return to login</a>
{% endblock %}